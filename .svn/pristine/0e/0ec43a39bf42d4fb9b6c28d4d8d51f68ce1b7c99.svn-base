        	window.open("","lectPlan","dialogWidth=1100px; dialogHeight=820px; scrollbars=no;resizable=no");
        	$("#lectPlanReportForm").submit();
        }
        /*성적 조회(과목)*/
        function getSubjectGrad(){
            var formData = $("#gradForm").serialize() + "&userNo="+ $("#userNo").val();
            $.ajax({
                type : "POST",
                async : false,
                url : "/searchGrad",
                data : formData,
                dataType : "json",
                success : getSubjectGradOk
            });
